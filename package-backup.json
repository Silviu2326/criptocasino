{
  "name": "crypto-casino",
  "version": "1.0.0",
  "private": true,
  "description": "Provably-fair crypto casino monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter=@crypto-casino/web dev",
    "dev:api": "pnpm --filter=@crypto-casino/api dev",
    "dev:mobile": "pnpm --filter=@crypto-casino/mobile start",
    "build:web": "pnpm --filter=@crypto-casino/web build",
    "start:web": "pnpm --filter=@crypto-casino/web start",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter=@crypto-casino/web test:e2e",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "db:migrate": "pnpm --filter=@crypto-casino/api db:migrate",
    "db:migrate:dev": "pnpm --filter=@crypto-casino/api db:migrate:dev",
    "db:seed": "pnpm --filter=@crypto-casino/api db:seed",
    "db:reset": "pnpm --filter=@crypto-casino/api db:reset",
    "db:studio": "pnpm --filter=@crypto-casino/api db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "main": "simple-server.js",
  "dependencies": {
    "@walletconnect/client": "^1.8.0",
    "@walletconnect/web3-provider": "^1.8.0",
    "cors": "^2.8.5",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-scope": "^7.2.2",
    "eslint-visitor-keys": "^3.4.3",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "multer": "^1.4.5-lts.1",
    "prettier-linter-helpers": "^1.0.0",
    "web3modal": "^1.9.12"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
